{
  "name": "hass-generator",
  "version": "0.2.0",
  "description": "CLI tool for generating Home Assistant YAML configs and dashboards",
  "type": "module",
  "bin": {
    "hass-gen": "./bin/hass-gen.js"
  },
  "files": [
    "bin/",
    "src/",
    "templates/"
  ],
  "scripts": {
